{
  "nodeEnv": "development",
  "github": {
    "token": "${GITHUB_TOKEN}",
    "organization": "your-org-name",
    "rateLimit": {
      "maxRetries": 3,
      "backoffMs": 1000
    }
  },
  "database": {
    "path": "./data/metrics.db",
    "verbose": false,
    "walMode": true
  },
  "logging": {
    "level": "info",
    "colored": true
  },
  "reports": {
    "defaultDateRange": "last-30-days",
    "outputDirectory": "./reports",
    "excludedUsers": ["dependabot[bot]", "github-actions[bot]"]
  },
  "teams": {
    "frontend": {
      "name": "Frontend Team",
      "description": "Web and mobile application developers",
      "members": ["alice", "bob", "charlie"],
      "repositories": ["web-app", "mobile-app"]
    },
    "backend": {
      "name": "Backend API Team",
      "description": "API and backend service developers",
      "members": ["dave", "eve"],
      "repositories": ["api-service", "auth-service"]
    }
  }
}
