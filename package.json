{
  "name": "metrics-v2",
  "version": "1.0.0",
  "description": "Engineering Metrics Platform - Track engineering performance through GitHub data",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "metrics": "dist/presentation/cli/index.js"
  },
  "scripts": {
    "dev": "tsx src/presentation/cli/index.ts",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "check": "pnpm typecheck && pnpm lint && pnpm format:check",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "verify": "pnpm check && pnpm test",
    "prepare": "husky"
  },
  "keywords": [
    "engineering-metrics",
    "github",
    "analytics",
    "cli"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.13.1",
  "dependencies": {
    "@octokit/rest": "^22.0.0",
    "@types/node": "^24.6.2",
    "better-sqlite3": "^12.4.1",
    "commander": "^14.0.1",
    "dotenv": "^17.2.3",
    "pino": "^10.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/better-sqlite3": "^7.6.13",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitest/coverage-v8": "^3.2.4",
    "chalk": "^5.6.2",
    "eslint": "^9.36.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "ora": "^9.0.0",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.6.2",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3"
    ]
  }
}
